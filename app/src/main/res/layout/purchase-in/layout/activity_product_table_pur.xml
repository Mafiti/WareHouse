<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".purchaseIn.Purchase_table">
    <com.mondschein.titleview.TitleView
        android:id="@+id/title_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="采购入库单记录"
        app:title_color = "#000000"
        >
    </com.mondschein.titleview.TitleView>
    <RelativeLayout
        android:id="@+id/in_house"
        android:layout_below="@+id/title_table"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/in_house"/>
        <TextView
            android:id="@+id/wave_pur"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#707274"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/table"
            android:maxLines="2"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/view1"
        android:layout_below="@+id/in_house"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D3D4"/>
    <RelativeLayout
        android:id="@+id/product_num"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/product_num"/>
        <TextView
            android:id="@+id/product_noid_pur"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#707274"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/table"
            android:maxLines="2"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/view2"
        android:layout_below="@+id/product_num"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D3D4"/>
    <RelativeLayout
        android:id="@+id/product_pici"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/production_batch"/>
        <TextView
            android:id="@+id/batch_pur"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#707274"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/table"
            android:maxLines="2"
            android:background="@null"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view3"
        android:layout_below="@+id/product_pici"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/table_gray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/in_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="@string/in_house_num"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/box_num_to_ware_pur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/in_num"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/in_box"
            android:layout_toRightOf="@+id/in_box"
            />
        <TextView
            android:id="@+id/in_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="@string/in_house_numb"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_num_to_ware_pur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/in_num"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/in_num"
            android:layout_toRightOf="@+id/in_num"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/list_title"
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="@string/box_num"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dev_id"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/class_time"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/item_number"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/location"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_pur"
        android:layout_below="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_weight="1"

        android:background="@color/produce_background">

    </android.support.v7.widget.RecyclerView>
