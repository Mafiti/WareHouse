<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productIn.produce_table.Product_table">
    <com.mondschein.titleview.TitleView
        android:id="@+id/title_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="生产入库单记录"
        app:title_color="@color/black"
    >
    </com.mondschein.titleview.TitleView>
    <RelativeLayout
        android:id="@+id/in_house"
        android:layout_below="@+id/title_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/in_house"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:textColor="#707274"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="@string/table"
            android:maxLines="2"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/view1"
        android:layout_below="@+id/in_house"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D3D4"/>
    <RelativeLayout
        android:id="@+id/product_num"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/product_num"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:textColor="#707274"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="@string/table"
            android:maxLines="2"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/view2"
        android:layout_below="@+id/product_num"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D3D4"/>
    <RelativeLayout
        android:id="@+id/product_pici"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/production_batch"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:textColor="#707274"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/table"
            android:maxLines="2"
            android:background="@null"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view3"
        android:layout_below="@+id/product_pici"
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:background="@color/table_gray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/in_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="@string/in_house_num"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/in_num"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/in_box"
            android:layout_toRightOf="@+id/in_box"
            />
        <TextView
            android:id="@+id/in_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="@string/in_house_numb"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/in_num"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/in_num"
            android:layout_toRightOf="@+id/in_num"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/list_title"
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/box_num"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:text="@string/produce_line"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="1dp"
            android:text="@string/class_time"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:text="@string/item_number"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/product_time"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/location"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
       android:id="@+id/list"
        android:layout_above="@+id/btn_scan_delete"
        android:layout_below="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_weight="1"
        android:layout_marginLeft="10.5dp"
        android:layout_marginRight="10.5dp"
        android:background="@color/produce_background">

    </android.support.v7.widget.RecyclerView>
<!--    <Button
        android:id="@+id/btn_scan_delete"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="38dp"
        android:layout_marginLeft="38.5dp"
        android:layout_marginBottom="32dp"
        android:text="@string/scan_delete"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/btn2_non"
        />-->
    <com.example.mondschein.btnview.ButtonView
        android:id="@+id/btn_scan_delete"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:btn_src = "@mipmap/ch"
        app:btn_text = "@string/scan_delete"
        app:btn_text_size = "18"
        app:btn_text_color = "#ffffff"
        >

    </com.example.mondschein.btnview.ButtonView>

</RelativeLayout>
