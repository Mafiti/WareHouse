<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productIn.ProductInActivity">

    <com.mondschein.titleview.TitleView
        android:id="@+id/title_pur"
        app:title_text ="@string/product_in_ware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_color = "#000000"
        >

    </com.mondschein.titleview.TitleView>
    <ImageView
        android:id="@+id/up_toware"
        android:layout_below="@id/title_pur"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/uptoware"
        />

    <RelativeLayout
        android:layout_below="@id/up_toware"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/split_view"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:layout_height="wrap_content"
            android:background="@drawable/split_shape"
            android:elevation="4dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/btn_complete_ware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/complete"
                    android:button="@null"
                    />
                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="#D2D3D4"
                    />

                <RadioButton
                    android:id="@+id/btn_gp_ware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/line1"
                    android:background="@drawable/gp12"
                    android:button="@null"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/line3"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:background="#D2D3D4"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/line4"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:background="#D2D3D4"
                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RadioButton
                    android:id="@+id/btn_buffer_ware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buffer"
                    android:button="@null"
                    />
                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="#D2D3D4"
                    />

                <RadioButton
                    android:id="@+id/btn_waste_ware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/line2"
                    android:background="@drawable/waste"
                    android:button="@null"

                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <com.example.mondschein.btnview.ButtonView
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:btn_src = "@drawable/btn_white"
        app:btn_text = "@string/next"
        app:btn_text_size = "18"
        app:btn_text_color = "@color/tab_blue"
        />

</RelativeLayout>