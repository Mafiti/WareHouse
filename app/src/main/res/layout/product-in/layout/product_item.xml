<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/box_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/box_num"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/produce_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="@string/produce_line"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/class_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="@string/class_time"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/item_number"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/product_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/product_time"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="@string/location"
        android:textSize="15sp"
        android:textColor="@color/black"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>