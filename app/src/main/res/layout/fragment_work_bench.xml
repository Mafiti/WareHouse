<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="yantai.yidian.warehouse.WorkBenchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/tab_blue"
        android:padding="8dp">
        <LinearLayout
            android:id="@+id/llyt_inop"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/opline_bg_selector"
            android:clickable="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_inop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/inop_picture_selector" />

            <TextView
                android:id="@+id/txt_inop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="入库类操作"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/llyt_outop"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/opline_bg_selector"
            android:clickable="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_outop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/outop_picture_selector" />

            <TextView
                android:id="@+id/txt_outop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="出库类操作"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/llyt_insideop"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/opline_bg_selector"
            android:clickable="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_insideop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/insideop_picture_selector" />

            <TextView
                android:id="@+id/txt_insideop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="库内操作"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_essence"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
